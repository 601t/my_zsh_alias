alias rmhistory='cat /dev/null > ~/.zsh_history'
alias ligsr='libinput-gestures-setup restart && exit'
alias gmcon='gm convert'
alias optipng='optipng -zc9 -zm9 -zs3 -f5'
alias oxipng='oxipng -Z -f0-5 -t8 --fix'
alias wavpack='wavpack -hx6yvtz1 --threads=12'
alias flwa2wv='if [[ $(find ./* -type f -name "*.flac" | wc -l) > 0 ]] ; then foreach flac (./**/*.flac) { flac -d -f $flac } ; fi ; foreach wav (./**/*.wav) { wavpack $wav } && rm ./**/*.wav'
alias wvgain='wvgain -ntz1'
alias aacgain='aacgain -e -c -t -p -s i'
alias to_user='find ./* -print0 | xargs -0 -r sudo chown ${USER}:${USER} ; find ./* -type d -print0 | xargs -0 -r chmod 755 ; find ./* -type f -print0 | xargs -0 -r chmod 644'
alias ain='adb install'
alias asl='adb sideload'
alias areb='adb reboot'
alias arebr='adb reboot recovery'
alias arebb='adb reboot bootloader'
alias aush='adb push'
alias aull='adb pull'
alias sudo='sudo '
alias fb='fastboot'
alias fbr='fastboot reboot'
alias fbrf='fastboot reboot fastboot'
alias fbrr='fastboot reboot recovery'
alias fbrb='fastboot reboot bootloader'
alias fbfb='fastboot flash boot'
alias fbfr='fastboot flash recovery'
alias fbfs='fastboot flash system'
alias jpg2pdf='gmcon *.jpg out.pdf'
alias scrcpy='scrcpy -b 2147483647 --require-audio --audio-bit-rate=512K --shortcut-mod=ralt,lsuper'
alias swapreset='sudo swapoff -a ; sudo swapon /dev/zram0; exit'
